using System;
using System.Linq;
public class Program 
{
    public static string MakeTitle(string str) 
    {
			char pre = ' ';
			string st = "";
      foreach(char ch in str){
				if(pre==' '){
					st += char.ToUpper(ch);
				}else{
					st += ch;
				}
				pre = ch;
			}
			return st;
    }
}
