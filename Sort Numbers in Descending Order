using System.Linq;
using System;

public class Program 
{
    public static int SortDescending(int num) 
    {
      return Convert.ToInt32(string.Join("",num.ToString().ToCharArray().OrderByDescending(a => a).ToArray()));
    }
}


//String から直接編集も可能
//string.Concat(num.ToString().OrderByDescending(a => a))
